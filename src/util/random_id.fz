#
# generate random id basedon byte number
#
module random_id is

  rnd := random
   #
   # Create a Base64.url encoded id from the given number of random bits.
   #
  module get (bits i32) =>
    bytes := ((bits+7)/8)
    res := rnd.next_u64 bytes.as_u64
    encodings.base64.encode res.as_bytes.as_array

  module get_password (bits i32) String =>
    get bits
